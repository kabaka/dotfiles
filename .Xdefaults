! Colors and Styles

URxvt*depth:           32
URxvt*foreground:      #B0B0B0
URxvt*background:      rgba:0000/0000/0000/8888
URxvt*transparent:     true
URxvt*shading:         20
URxvt*cursorColor2:    #FFFFFF

URxvt*scrollBar:       false
URxvt*scrollBar_right: false
URxvt*scrollstyle:     rxvt
URxvt*borderLess:      false
URxvt*externalBorder:  0
URxvt*internalBorder:  0


! Fonts

URxvt*font:            xft:Hack:style=Regular:size=10:antialias=true:hinting=true
!URxvt*letterSpace:     -2


! Line/Buffers

URxvt*saveLines:       12000
URxvt*buffered:        false


! Extensions and External Interfaces

URxvt*perl-ext-common: default,matcher
URxvt*urlLauncher:     /usr/bin/chromium-browser
URxvt*matcher.button:  1
